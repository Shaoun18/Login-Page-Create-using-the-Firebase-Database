    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ExpenceListFragment">

        <include layout="@layout/bottom_sheet_layout"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
